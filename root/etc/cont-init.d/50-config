#!/usr/bin/with-contenv bash

# make our folders and links
mkdir -p \
	/config/log/spotweb

# link spotweb retrieve file if not present
[[ ! -f /etc/periodic/15min/spotweb ]] && \
ln -s /config/spotweb/retrieve /etc/periodic/15min/spotweb

# logfiles needed by spotweb retrieve
[[ ! -f /config/log/spotweb/retrieve.log ]] && \
	touch /config/log/spotweb/retrieve.log

# permissions
chown -R abc:abc \
	/config
chmod -R 0644 /etc/logrotate.d
chmod -R +r /config/log
